    <title>FlixGo – Online Movies, TV Shows & Cinema HTML Template</title>

</head>
<body class="body">

    <div class="sign section--bg" data-bg="../Login/img/section/section.jpg">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="sign__content">
                        <!-- authorization form -->
                        @*<div class="sign__form">*@
                        
                        @using (Html.BeginForm("register", "LogIn", FormMethod.Post)){
                            <a href="index.html" class="sign__logo" >
                                <center><img src="../Login/img/logo.svg" alt="" style="margin-bottom:50px " ></center>
                            </a>

                            <div class="sign__group">
                                 @Html.TextBoxFor(x=>x.TenTaiKhoan, new{@class="sign__input", placeholder="Username", required="required", autofocus="autofocus"})
                                 @*<input type="text" class="sign__input" placeholder="Email">*@
                            </div>

                            <div class="sign__group">
                                    @Html.TextBoxFor(x=>x.PassWord, new{@class="sign__input",type="Password", placeholder="Password"})
                                  @*<input type="password" class="sign__input" placeholder="Password">*@
                            </div>
                                <div class="sign__group">
                                    @Html.TextBoxFor(x=>x.PassWord, new{@class="sign__input",type="Password", placeholder="Nhập lại Password"})
                                    @*<input type="password" class="form-control form-control-lg" id="exampleInputPassword1" placeholder="Password">*@
                                </div>

                            <div class="sign__group sign__group--checkbox">
                                <input id="remember" name="remember" type="checkbox" checked="checked">
                                <label for="remember">Remember Me</label>
                            </div>
                                <button class="sign__btn" type="submit">SIGN UP</button>
                                @*<button class="sign__btn" type="button">Sign in</button>*@

                                <span class="sign__text">Have an account? <a asp-controller="LogIn" asp-action="login">SIGN IN</a></span>

                            <span class="sign__text"><a href="#">Forgot password?</a></span>
                        
                        }
                        @*</div>*@
                    
                        
                        <!-- end authorization form -->
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- JS -->
    <script src="../Login/js/jquery-3.3.1.min.js"></script>
    <script src="../Login/js/bootstrap.bundle.min.js"></script>
    <script src="../Login/js/owl.carousel.min.js"></script>
    <script src="../Login/js/jquery.mousewheel.min.js"></script>
    <script src="../Login/js/jquery.mCustomScrollbar.min.js"></script>
    <script src="../Login/js/wNumb.js"></script>
    <script src="../Login/js/nouislider.min.js"></script>
    <script src="../Login/js/plyr.min.js"></script>
    <script src="../Login/js/jquery.morelines.min.js"></script>
    <script src="../Login/js/photoswipe.min.js"></script>
    <script src="../Login/js/photoswipe-ui-default.min.js"></script>
    <script src="../Login/js/main.js"></script>
</body>
</html>